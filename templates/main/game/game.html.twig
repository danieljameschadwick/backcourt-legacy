{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - {{ game.awayTeam.name }} @ {{ game.homeTeam.name }}
{% endblock title %}

{% block body %}
    <div class="container page-content">
        <h3 class="pb-2">{{ game.awayTeam.name }} @ {{ game.homeTeam.name }}</h3>

        <div class="row">
            <div class="col-md-4">
                {% include 'includes/ui/team/team_card.html.twig' with { 'team': game.homeTeam } %}
            </div>

            <div class="col-md-8">
                {% if game.final %}
                    {{ include('includes/ui/game/game_final.html.twig') }}
                {% else %}
                    {{ include('includes/ui/game/game_lineup.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock body %}