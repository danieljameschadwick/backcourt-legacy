<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}{{ site_name }}{% endblock %}</title>

        {{ include('includes/fonts.html.twig') }}
        {{ encore_entry_link_tags('main') }}

        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        {% block header %}
        {% endblock header %}

        {% block body %}{% endblock %}

        {% block footer %}
        {% endblock footer %}

        {{ encore_entry_script_tags('app') }}

        {% block javascripts %}
        {% endblock %}

    </body>
</html>
