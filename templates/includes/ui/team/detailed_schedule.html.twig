<div class="page-block">
    <div class="page-block-header">
        <h5>Schedule</h5>
    </div>
    <div class="page-block-content border border-grey border-top-0">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Tip Off</th>
                            <th scope="col">Away</th>
                            <th scope="col"></th>
                            <th scope="col">Home</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for game in team.games %}
                            <tr>
                                <th scope="row">{{ game.tipOff|date('d/m/Y') }}</th>
                                <td>{{ game.tipOff|date('H:i') }}</td>
                                <td>{{ game.awayTeam.name }}</td>
                                <td>@</td>
                                <td>{{ game.homeTeam.name }}</td>
                                <td>
                                    <a href="{{ path('app_games_game', { 'id': game.id }) }}">
                                        Matchup
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>