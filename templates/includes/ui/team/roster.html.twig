<div class="page-block">
    <div class="page-block-header">
        <h5>Roster</h5>
    </div>
    <div class="page-block-content border border-grey border-top-0">
        <div class="row">
            {% for player in team.roster %}
                <div class="col-sm-12 border border-light">
                    <div class="row p-2">
                        <div class="col-sm-3">
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect>
                                <text x="50%" y="50%" fill="#dee2e6" dy=".3em">
                                    Roster
                                </text>
                            </svg>
                        </div>
                        <div class="col-sm-7">
                            <div class="row">
                                <div class="col-sm-12">
                                    {{ player.name }}, {{ player.position }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    California
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    Attributes:
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            Jump Shot: {{ player.attributes.jumpShot }}
                                        </div>
                                        <div class="col-sm-4">
                                            Jump Range: {{ player.attributes.jumpShotRange }}
                                        </div>
                                        <div class="col-sm-4">
                                            Outside Defence: {{ player.attributes.outsideDefence }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4">
                                            Inside Defence: {{ player.attributes.insideDefence }}
                                        </div>
                                        <div class="col-sm-4">
                                            Blocking: {{ player.attributes.blocking }}
                                        </div>
                                        <div class="col-sm-4">
                                            Steals: {{ player.attributes.steals }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4">
                                            Inside Defence: 99
                                        </div>
                                        <div class="col-sm-4">
                                            Inside Defence: 99
                                        </div>
                                        <div class="col-sm-4">
                                            Inside Defence: 99
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>